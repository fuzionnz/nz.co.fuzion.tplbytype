<?xml version="1.0"?>
<extension key="nz.co.fuzion.tplbytype" type="module">
  <file>tplbytype</file>
  <name>tpl by type</name>
  <description>Select Tpl file by contribution or financial type</description>
  <license>agpl</license>
  <urls>
    <url desc="Main Extension Page">http://civicrm.org</url>
    <url desc="Documentation">http://civicrm.org</url>
    <url desc="Support">http://civicrm.org</url>
    <url desc="Licensing">http://civicrm.org</url>
  </urls>
  <maintainer>
    <author>Eileen McNaughton</author>
    <email>eileen@fuzion.co.nz</email>
  </maintainer>
  <releaseDate>2024-02-24</releaseDate>
  <version>1.1.1</version>
  <develStage>stable</develStage>
  <compatibility>
    <ver>5.26</ver>
  </compatibility>
  <comments>Will select the tpl for an event or contribution as CRM\Contribute\Form\Contribution\Type1\Main.tpl etc if the file exists or Campaign1 instead of type if applicable</comments>
  <civix>
    <namespace>CRM/Tplbytype</namespace>
    <format>23.02.1</format>
  </civix>
  <classloader>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
</extension>
